%ul
  - [:index, :content_partners, :curators, :data_objects,
    :lifedesks, :marine, :page_richness, :users_data_objects].each do |report|
    - path_params = { :date_one_set => @stats_one.created_at.to_date, :date_two_set => @stats_two.created_at.to_date} rescue nil
    %li{:class => resource_is_active(report.to_s)}
      = link_to I18n.t(:menu_link, :scope => [:eol_statistics, report]),
        (report == :index) ? statistics_path(path_params) : send("#{report}_statistics_path", path_params)

- content_for :head do
  = stylesheet_link_tag 'admin'
  = stylesheet_link_tag @additional_stylesheet if @additional_stylesheet
  = javascript_include_tag @additional_javascript if @additional_javascript
- content_for :content do
  #content
    #page-separator-general
    #page-title
      %h1
        = @page_title || 'Select an Item from the Menu'[]
      %hr
    #page-content.clearfix
      #page-content-bgfauxinside
        #page-content.clearfix
          #full-page-content
            #left-pane
              = render(:partial => @navigation_partial)
            #right-pane
              = yield
= render :file => 'layouts/main'

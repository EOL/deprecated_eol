#page-separator-general
#page-title
  %h1
    = I18n.t(:forgot_password) 
  %hr
#page-content.clearfix
  / center page content
  #full-page-content
    %br
    %p== #{ I18n.t(:forgot_password_message) }:
    - form_for :user do |form|
      %fieldset
        %label{ :for => "user_email" }== #{ I18n.t(:email_address) }:
        = form.text_field 'email', :size => 50, :maxlength => 250
        %br
        %br
        =I18n.t("or_")
        %br
        %br
        %label{ :for => "user_name" }== #{ I18n.t(:username) }:
        = form.text_field 'username', :size => 30, :maxlength => 30
        %br
        %br
        %table{ :border => "0", :width => "500", :cellpadding => "20" }
          %tr
            %td{ :valign => "top" }
              = submit_tag  I18n.t(:submit)  + ' &#187;'
            %td{ :valign => "middle" }
              = link_to  I18n.t(:cancel) , :action => 'login'
    -# end of form

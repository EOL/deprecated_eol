        = link_to I18n.t(:communities), taxon_hierarchy_entry_communities_path(@taxon_concept)
      - else
        = link_to I18n.t(:communities), taxon_communities_path(@taxon_concept)
    %li{:class => resource_is_active('taxa/communities', 'collections')}

<% item_class=item.is_child? ? 'li-sub' : '' %>
<li class="<%=item_class%>">
   <% if item.has_content? %>
 	  <a href="<%= url_for :action=>'show',:id=>@taxon_id, :category_id => item.id %>" onclick="eol_update_content_area(<%=@taxon_id%>,<%=item.id%>);this.className = 'active';return false;" class="<%= [@category_id, @item].include?(item.id) ? "active" : nil %>" title="<%= item.label %>"> 
    <% else %>
      <span class="no_toc_link">
    <% end %>
    <%- if item.has_unpublished_content? -%>
      <%= preview_icon %>
    <%- end -%>
	    <%= item.label %>
	<% if item.has_content? %>
	   </a>
	<% else %>
       </span>
	 <% end %>
</li>

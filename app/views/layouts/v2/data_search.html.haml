- content_for :head do
  = javascript_include_tag 'data_search'
- content_for :main do
  #page_heading
    .site_column
      .hgroup
        - if @attribute.blank?
          %h1= t('.page_header')
        - else
          %h1= t('.page_header_results')
          %h2= data_search_results_summary
      .page_actions
        %ul
          - if @results && !@results.blank?
            %li.data_download{"data-alert" => ((@results.total_entries > DataSearchFile::LIMIT) ? I18n.t(:data_beta_search_limit, count: DataSearchFile::LIMIT) : nil)}
              = link_to I18n.t(:download_data),
                download_data_search_path(params: params),
                method: :post, :class => 'button'
      = render :partial => 'shared/flash_messages'
  #content
    .site_column
      #data_search{data: {results_total: @results.blank? ? 0 : @results.total_entries}}
        = render 'data_search/form'
        #search_results
          #main
            = yield

= render file: 'layouts/v2/application'

- div_style = data_object.untrusted? ? '' :  'display:none;'
.reason{ :style => div_style }
  .option
    = check_box_tag 'untrust_reasons[]', UntrustReason.misidentified.id.to_s, data_object.untrust_reasons_include?(UntrustReason.misidentified), {:id => 'untrust_reason_misidentified'}
    Misidentified
  .option
    = check_box_tag 'untrust_reasons[]', UntrustReason.incorrect.id.to_s, data_object.untrust_reasons_include?(UntrustReason.incorrect), {:id => 'untrust_reason_incorrect'}
    Incorrect/misleading information
  .option
    = check_box_tag 'untrust_reasons[]', UntrustReason.poor.id.to_s, data_object.untrust_reasons_include?(UntrustReason.poor), {:id => 'untrust_reason_poor'}
    Poor writing/image/sound quality
  .option
    = check_box_tag 'untrust_reasons[]', UntrustReason.duplicate.id.to_s, data_object.untrust_reasons_include?(UntrustReason.duplicate), {:id => 'untrust_reason_duplicate'}
    Redundant/duplicate
  .option
    = check_box_tag 'untrust_reasons[]', UntrustReason.other.id.to_s, data_object.untrust_reasons_include?(UntrustReason.other), {:id => 'untrust_reason_other'}
    Other

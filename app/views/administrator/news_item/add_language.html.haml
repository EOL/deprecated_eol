= eol_lang_error_messages_for :news_item
= javascript_include_tag 'fckeditor/fckeditor'
= javascript_include_tag 'admin-news-item.js'
- form_for :news_item,@news_item,:url=>{:action=>'save_translation',:id=>@news_item.id},:html=>{:id=>'news_item_form', 'data-news_item_id' => @news_item.id} do |f|
  %table{:width => '100%'}
    %tr
      %td
        %strong
          = I18n.t("language")
      %td
        = f.select :current_translation_language, @news_item.not_available_in_languages(nil).collect {|l| [l.iso_639_1, l.id]}
    = render(:partial => 'language_form', :locals => { :f => f })

  %br
  %br
  = cancel_button_goes_back(return_to_url)
  |
  = f.submit

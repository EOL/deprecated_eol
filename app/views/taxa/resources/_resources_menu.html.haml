#tabs_sidebar
  %ul.tabs
    - if @selected_hierarchy_entry
      %li{:class => resource_is_active('taxa/resources', 'show')}  
        = link_to I18n.t(:content_partners), taxon_hierarchy_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
      %li{:class => resource_is_active('taxa/resources', 'education')}  
        = link_to I18n.t(:education), education_taxon_hierarchy_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
        - if Resource.ligercat.nil?
          Hello
      - if !Resource.ligercat.nil? && HierarchyEntry.find_by_hierarchy_id_and_taxon_concept_id(Resource.ligercat.hierarchy.id, @taxon_concept.id)
        %li{:class => resource_is_active('taxa/resources', 'biomedical_terms')}  
          = link_to I18n.t(:biomedical_terms), biomedical_terms_taxon_hierarchy_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
      %li{:class => resource_is_active('taxa/resources', 'identification_resources')}
        = link_to I18n.t(:identification_resources), identification_resources_taxon_hierarchy_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
      - unless @taxon_concept.nucleotide_sequences_hierarchy_entry_for_taxon.blank?
        %li{:class => resource_is_active('taxa/resources', 'nucleotide_sequences')}  
          = link_to I18n.t(:nucleotide_sequences), nucleotide_sequences_taxon_hierarchy_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
    - else
      %li{:class => resource_is_active('taxa/resources', 'show')}  
        = link_to I18n.t(:content_partners), taxon_resources_path(@taxon_concept)
      %li{:class => resource_is_active('taxa/resources', 'education')}  
        = link_to I18n.t(:education), education_taxon_resources_path(@taxon_concept)
      - if !Resource.ligercat.nil? && HierarchyEntry.find_by_hierarchy_id_and_taxon_concept_id(Resource.ligercat.hierarchy.id, @taxon_concept.id)
        %li{:class => resource_is_active('taxa/resources', 'biomedical_terms')}  
          = link_to I18n.t(:biomedical_terms), biomedical_terms_taxon_resources_path(@taxon_concept)
      %li{:class => resource_is_active('taxa/resources', 'identification_resources')}
        = link_to I18n.t(:identification_resources), identification_resources_taxon_resources_path(@taxon_concept)
      - unless @taxon_concept.nucleotide_sequences_hierarchy_entry_for_taxon.blank?
        %li{:class => resource_is_active('taxa/resources', 'nucleotide_sequences')}  
          = link_to I18n.t(:nucleotide_sequences), nucleotide_sequences_taxon_resources_path(@taxon_concept)
        
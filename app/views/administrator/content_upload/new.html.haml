= form_for @content_upload,:url => {:action=>'create'},:html=>{ :method => :post, :multipart => true,:id=>'page_form'} do |f|
  = eol_lang_error_messages_for :content_upload
  %br
  %table
    = render :partial => 'form', :locals => {:f=>f}
    %tr
      %td
        %strong
          =I18n.t(:file)
      %td
        = f.file_field :attachment, :size=>50
        %br
        =I18n.t(:content_upload_restrictions_note)
  %br
  %br
  = cancel_button_goes_back(url_for(:action=>'index'))
  &#124;
  = f.submit I18n.t(:upload)

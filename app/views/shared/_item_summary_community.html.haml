- view_style ||= 'default'
- unless view_style == 'list'
  = link_to image_tag(item.logo_url(:small), :alt => I18n.t(:community_logo_alt_text, :community_name => item.collected_name)), community_path(item)
- unless ['gallery','list'].include?(view_style)
  = link_to content_tag(:span, '', {:class => 'icon', :title => I18n.t(:item_type_community_assistive)}), community_path(item)
%h4
  = link_to h(truncate(item.collected_name, :length => 64)), community_path(item)
  - if view_style == 'list' && @filter.nil?
    %small= I18n.t(:item_type_community)
- unless ['gallery','list'].include?(view_style)
  = I18n.t(:members_with_count_semi_colon, :count => item.members.count)
  = I18n.t(:collections_with_count, :count => item.collections.count)

#content
  #taxon_resources.site_column
    = render :partial => 'resources_menu'
    #nucleotide_sequences.main_container
      .copy
        %h3= I18n.t(:nucleotide_sequences)
        - unless @identifier.blank?
          = link_to image_tag('/images/v2/ncbi.gif'), "http://www.ncbi.nlm.nih.gov/Taxonomy/Browser/wwwtax.cgi?id=#{@identifier}&lvl=0"
          %p= I18n.t(:nucleotide_sequences_ncbi_mission, :ncbi_link => 'http://www.ncbi.nlm.nih.gov/')
          %p= I18n.t(:nucleotide_sequences_ncbi_database, :ncbi_taxonomy_link => 'http://www.ncbi.nlm.nih.gov/sites/entrez?db=taxonomy')
          %p= link_to I18n.t(:nucleotide_sequences_proteins_link), "http://www.ncbi.nlm.nih.gov/Taxonomy/Browser/wwwtax.cgi?id=#{@identifier}&lvl=0"



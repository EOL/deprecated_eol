#sign_up
  %h1= I18n.t(:terms_agreement_form_header)
  = form_for @user, :url => terms_agreement_user_path(@user), :html => {:method => :post, :class => 'terms_agreement'}  do |f|
    %fieldset.copy
      - if @terms.blank?
        %p= raw(I18n.t(:terms_agreement_form_fallback, :terms_url => terms_of_use_path))
      - else
        = raw(@terms.main_content)
    %fieldset.actions
      = f.submit I18n.t(:terms_agreement_form_submit), :name => :commit_agreed, :class => 'override_lowercase'
      = link_to  I18n.t(:cancel) , logout_path

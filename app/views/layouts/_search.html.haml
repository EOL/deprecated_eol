%form{ :id => "simple_search", :action => search_url, :method => "get", :role => "search" }
  %h2= I18n.t(:search_the_site) 

  
  %input#q{ :type => "text", :name => "q", :value => (params[:q] || ""), :maxlength => "250" }
  %input{ :type => "submit", :name => "search", :value => I18n.t(:search)  }

  - if @logged_search_id
    = hidden_field_tag :search_log_id, @logged_search_id

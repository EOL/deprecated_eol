        = link_to I18n.t(:collections), collections_taxon_communities_path(@taxon_concept)
    %li{:class => resource_is_active('taxa/communities', 'curators')}
      - if @selected_hierarchy_entry
        = link_to I18n.t(:curators), curators_taxon_hierarchy_entry_communities_path(@taxon_concept)
